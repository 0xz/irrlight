<?xml version="1.0" encoding="UTF-8" ?>
<maiken>
	<project>
		<name>irrlight</name>
		<version>master</version>
	</project>

	<profiles>
		<profile name="nix">
			<dependencies>
				<dependency>
					<name>kul.nix</name>
					<profile>nixr</profile>
					<version>master</version>
					<remote scm="git">http://www.github.com/Dekken/kul.nix.git</remote>
				</dependency>
				<dependency>
					<name>irrlicht</name>
					<profile>nixr</profile>
					<version>trunk</version>
					<make>this</make>
					<local>./ext/irrlicht</local>
				</dependency>
			</dependencies>
			<includes>
				<include>./inc</include>
			</includes>
			<build type="lib" mode="static" lang="cpp">
				<files>
					<file type="cpp">
						<args>
							<arg>-std=c++11</arg>
							<arg>-Wall</arg><arg>-fmessage-length=0</arg>
							<arg>-O0</arg><arg>-g3</arg>
						</args>
					</file>
				</files>
			</build>
		</profile>
		<profile name="nixr" parent="nix">
			<build type="lib" mode="static" lang="cpp"> 
				<files>
					<file type="cpp">
						<args><arg>-O3</arg><arg>-g0</arg></args>
					</file>
				</files>
			</build>
		</profile>

		<profile name="win">
			<dependencies>
				<dependency>
					<name>kul.win</name>
					<profile>winr</profile>
					<version>master</version>
					<remote scm="git">http://www.github.com/Dekken/kul.win.git</remote>
				</dependency>
				<dependency>
					<name>irrlicht</name>
					<profile>winr</profile>
					<version>trunk</version>
					<make>this</make>
					<local>./ext/irrlicht</local>
				</dependency>
			</dependencies>
			<includes>
				<include>./inc</include>
			</includes>
			<build type="lib" mode="static" lang="cpp">
				<files>
					<file type="cpp">
						<args><arg>/EHsc</arg></args>
					</file>
				</files>
			</build>
		</profile>
	</profiles>
</maiken>

